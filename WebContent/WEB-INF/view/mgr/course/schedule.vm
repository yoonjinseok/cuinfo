<head>
	<title>스케쥴 관리</title>
	<script type="text/javascript" language="javascript">
	function search()
	{
		goPage(1);
	}
	
	function setRecordCnt(totalCnt, currPage, totalPage, showCnt)
	{
		$("#tCnt").text(totalCnt);
		$("#cPage").text(currPage);
		$("#tPage").text(totalPage);
		
		setPaging($("#pg"), totalCnt, showCnt, currPage);
	}
	
	function goPage(page)
	{
		if(typeof(page) != "undefined")
			$("#currPage").val(page);
		
		jQuery.post('schedule_list.ajax.action', 
				$("#searchForm").formSerialize(), 
				function(data) {
        			$("#list").html(data);
		});
	}
	
	function modify(scheduleId)
	{
		showWin('/mgr/course/schedule_modify.pop.action?scheduleId=' + scheduleId, 'modwin', 800, 400);
	}
	
	function reg()
	{
		showWin('/mgr/course/schedule_write.pop.action', 'regwin', 800, 400);
	}
	
	$(document).ready(function() {
		search();
    });
	</script>
</head>
<body>
	
<div id="location_box">
		<h3><img src="/mgr/images/course/title4.gif" alt="스케쥴관리" /></h3>
		<ul class="location">
			<li><a href="/mgr/main.sub.action">Home</a></li>
			<li><a href="#">강좌메타관리</a></li>
			<li>스케쥴관리</li>
		</ul>
</div>

<form class="search_box01" id="searchForm" name="searchForm" action="#" onsubmit="try{search();}catch(e){alert(e);}return false;"><!-- box_type01 Start -->
<input type="hidden" id="showCnt" name="showCnt" value="10"/>
<input type="hidden" id="currPage" name="currPage" value="1"/>
	<fieldset class="inner">
		<table cellspacing="0" cellpadding="0" summary="스케쥴 검색" class="border_none_table">
			<caption>스케쥴 검색</caption>
			<colgroup>
				<col width="45%"/>
				<col width="*%"/>
			</colgroup>
			<tbody>
				<tr>
					<td>
						<label for="checkbox-1"> 학교명</label>
						<input type="text" id="universityName" name="universityName" style="width:70%" title="학교명입력"/> 
					</td>
					<td>
						<label for="select-1">등록상태</label>
						<select	id="status" name="status">
							<option value="">전체</option>
							<option value="Y">사용중</option>
							<option value="N">사용안함</option>
						</select>
						<a><input type="image" style="width:52px;height:21px;border:0px;" src="/mgr/images/btn/search.gif" alt="검색" /></a>
					</td>				
				</tr>
			</tbody>
		</table>
	</fieldset>
</form><!-- box_type01 End -->


<div class="list_top01">
	<span>학교명 클릭시 스케쥴을 수정할수 있습니다.</span>
	<span class="f_right">total : <em id="tCnt">00</em>건(<em id="cPage">1</em>/<em id="tPage">10</em>page)</span>
</div>


<div id="list">#parse('mgr/course/schedule_list.vm')</div>



<div class="page_num">
	<div id="pg" name="pg"></div>
	<a class="f_right" href="javascript:reg();"><img src="/mgr/images/btn/enter.gif" alt="등록" /></a>
</div>


</body>
</html>